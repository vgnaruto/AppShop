<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:background="@color/orange"
        android:paddingBottom="@dimen/_6sdp"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp"
        android:paddingTop="@dimen/_6sdp"
        android:elevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/_5sdp"
            android:paddingTop="@dimen/_5sdp">
            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/ic_back"
                android:scaleType="fitCenter"
                android:background="@null"/>
            <TextView
                android:id="@+id/prod_nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_4sdp"
                android:paddingBottom="@dimen/_4sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="Search for products ..."
                android:ellipsize="marquee"
                android:textSize="@dimen/_14sdp"/>
        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:layout_below="@id/ll_top"
        android:layout_above="@id/cart_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.v4.view.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_190sdp" />
            <LinearLayout
                android:background="@color/white"
                android:paddingTop="@dimen/_4sdp"
                android:paddingBottom="@dimen/_4sdp"
                android:paddingLeft="@dimen/_15sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/star1"
                    android:layout_marginRight="@dimen/_3sdp"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:src="@drawable/ic_star_off"/>
                <ImageView
                    android:id="@+id/star2"
                    android:layout_marginRight="@dimen/_3sdp"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:src="@drawable/ic_star_off"/>
                <ImageView
                    android:id="@+id/star3"
                    android:layout_marginRight="@dimen/_3sdp"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:src="@drawable/ic_star_off"/>
                <ImageView
                    android:id="@+id/star4"
                    android:layout_marginRight="@dimen/_3sdp"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:src="@drawable/ic_star_off"/>
                <ImageView
                    android:id="@+id/star5"
                    android:layout_marginRight="@dimen/_3sdp"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:src="@drawable/ic_star_off"/>
            </LinearLayout>
            <TextView
                android:paddingLeft="@dimen/_15sdp"
                android:paddingTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp"
                android:text="Price"/>
            <TextView
                android:id="@+id/prod_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_18sdp"
                android:paddingLeft="@dimen/_15sdp"
                android:text="Rp 180.000"
                android:textColor="@color/orange"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_15sdp"
                android:paddingTop="@dimen/_15sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@color/white"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/ll_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_total"
                        android:layout_width="@dimen/_90sdp"
                        android:textAlignment="textEnd"
                        android:layout_gravity="end"
                        android:layout_height="wrap_content"
                        android:text="Total Order"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/black"/>
                    <LinearLayout
                        android:layout_toRightOf="@id/tv_total"
                        android:layout_marginLeft="@dimen/_30sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_30sdp"
                        android:background="@drawable/layout_bg">
                        <EditText
                            android:id="@+id/total_buy"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="match_parent"
                            android:inputType="number"
                            android:textSize="@dimen/_10sdp"
                            android:maxLines="1"
                            android:text="1"
                            android:textAlignment="center"/>
                        <ImageButton
                            android:id="@+id/btn_min"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/border_left"
                            android:layout_width="@dimen/_24sdp"
                            android:layout_height="@dimen/_24sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:paddingLeft="@dimen/_5sdp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_min" />
                        <ImageButton
                            android:id="@+id/btn_add"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:background="@drawable/border_left"
                            android:paddingLeft="@dimen/_5sdp"
                            android:layout_width="@dimen/_26sdp"
                            android:layout_height="@dimen/_26sdp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_add"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:paddingTop="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="wrap_content"
                        android:text="Seller"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/black"
                        android:textAlignment="textEnd"
                        android:layout_gravity="end"/>
                    <LinearLayout
                        android:layout_marginLeft="@dimen/_30sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/seller_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Allyoucanget"
                            android:textSize="@dimen/_15sdp"
                            android:textColor="@color/orange"/>
                        <TextView
                            android:id="@+id/seller_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:textSize="@dimen/_12sdp"
                            android:text="Pagadengan, Tanggerang"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_13sdp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="Product Details"/>
                    <include
                        android:id="@+id/expand_tv"
                        layout="@layout/text_item"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/cart_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingTop="@dimen/_7sdp"
        android:background="@color/orange"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Buy Now"
            android:textColor="@color/white"
            android:textSize="@dimen/_18sdp"/>

    </LinearLayout>
</RelativeLayout>