<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/custom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/green"
        android:elevation="4dp" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/cart_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cart_icon"
                android:background="@null"
                android:layout_toLeftOf="@id/wishlist_button"
                android:paddingRight="@dimen/_10sdp"
                android:layout_centerVertical="true"/>
            <ImageButton
                android:id="@+id/wishlist_button"
                android:paddingLeft="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/wishlist_off"
                android:background="@null"
                android:layout_alignParentRight="true"
                android:paddingRight="@dimen/_4sdp"
                android:layout_centerVertical="true"/>

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl_title"
        android:background="@color/green"
        android:layout_below="@id/custom_toolbar"
        android:paddingBottom="@dimen/_10sdp">

        <ImageView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:id="@+id/iv_category_img"/>

        <TextView
            android:id="@+id/tv_category_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Placeholder"
            android:background="@color/green"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:paddingVertical="@dimen/_10sdp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/iv_category_img"/>

        <TextView
            android:id="@+id/tv_category_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descriptive placeholder"
            android:background="@color/green"
            android:textColor="@color/white"
            android:paddingBottom="@dimen/_10sdp"
            android:layout_toRightOf="@id/iv_category_img"
            android:layout_below="@id/tv_category_name"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_title">

        <GridView
            android:id="@+id/grid_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:gravity="center"
            android:numColumns="2"
            android:stretchMode="columnWidth"
            android:verticalSpacing="10dp"
            android:layout_below="@id/tv_category"/>

    </RelativeLayout>
</RelativeLayout>
