<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_alignParentTop="true"
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:background="@drawable/border_with_shadow_orange"
        android:paddingBottom="@dimen/_6sdp"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp"
        android:paddingTop="@dimen/_6sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/_5sdp"
            android:paddingTop="@dimen/_5sdp">
            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/ic_back"
                android:scaleType="fitCenter"
                android:background="@null"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_4sdp"
                android:paddingBottom="@dimen/_4sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="Informasi Data Diri"
                android:ellipsize="marquee"
                android:textSize="@dimen/_14sdp"/>
        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:background="@color/light_gray"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll_top">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp">
            <LinearLayout
                android:background="@drawable/border_with_shadow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_15sdp">
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/etNama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:met_floatingLabel="normal"
                    android:textColorHighlight="@color/black"
                    app:met_textColor="@color/black"
                    app:met_floatingLabelTextColor="@color/purple"
                    app:met_underlineColor="@color/purple"
                    android:hint="Nama"/>
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/etAlamat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:met_floatingLabel="normal"
                    android:textColorHighlight="@color/black"
                    app:met_textColor="@color/black"
                    app:met_floatingLabelTextColor="@color/purple"
                    app:met_underlineColor="@color/purple"
                    android:hint="Alamat"/>
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:met_floatingLabel="normal"
                    android:textColorHighlight="@color/black"
                    app:met_textColor="@color/black"
                    app:met_floatingLabelTextColor="@color/purple"
                    app:met_underlineColor="@color/purple"
                    android:hint="E-mail"/>
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/border_with_shadow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_15sdp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Provinsi"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:textColor="@color/purple"/>
                <Spinner
                    android:id="@+id/spinner_provinsi"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@drawable/spinner_border"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kabupaten / Kota"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:textColor="@color/purple"/>
                <Spinner
                    android:id="@+id/spinner_kabupaten"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@drawable/spinner_border"/>
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/border_with_shadow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_15sdp">
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/etKodePos"
                    android:paddingBottom="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:met_floatingLabel="normal"
                    android:textColorHighlight="@color/black"
                    app:met_floatingLabelTextColor="@color/purple"
                    app:met_textColor="@color/black"
                    app:met_underlineColor="@color/purple"
                    android:inputType="number"
                    android:hint="Kode Pos"/>
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/etNoTelepon"
                    android:paddingBottom="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:met_floatingLabel="normal"
                    android:textColorHighlight="@color/black"
                    app:met_textColor="@color/black"
                    app:met_underlineColor="@color/purple"
                    app:met_floatingLabelTextColor="@color/purple"
                    android:inputType="number"
                    android:hint="Nomor Telepon Penerima"/>
            </LinearLayout>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton android:id="@+id/radio_pembeli"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pembeli"
                    android:layout_weight="1"/>
                <RadioButton android:id="@+id/radio_penjual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Penjual"
                    android:layout_weight="1"/>
            </RadioGroup>

            <Button
                android:id="@+id/btn_simpan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/purple"
                android:text="Simpan"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                android:padding="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_20sdp"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>